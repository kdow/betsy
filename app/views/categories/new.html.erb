<h2>Create new category</h2>

<%= form_with model: @category  do |f| %>

  <div class="form-group">
    <%= f.label :name, "Category" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary"%>
  </div>

<% end %>