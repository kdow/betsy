<section class="cards">
  <% Product.active(@products).each do |product| %>
    <article>
      <div class="card">
        <%= link_to(image_tag(product.photo_url, class: "card-img-top", :alt => "Photo of ""#{product.name}"), product_path(product)) %>
        <div class="card-body">
          <%= link_to product.name, product_path(product) %> 
          <br>
          <%= "$""#{'%.2f' % (product.price / 100.00)}" %>
          <%= form_for @order_product do |f| %>
            <% if product.quantity.nil? || product.quantity < 1 %>
              <% "Sorry, this item is out of stock." %>
            <% else %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.number_field :quantity, value: 1, min: 0, max: product.quantity, class: "form-control qty" %>
            <%= f.submit "Add to cart", class: "btn btn-primary mt-1" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </article>
  <% end %>
</section>