<h2><%= @product.name %></h2>

<ul>
  <li><%= image_tag(@product.photo_url, :alt => "Photo of ""#{@product.name}") %></li>
  <li>Price: <%= "$""#{'%.2f' % (@product.price / 100.00)}" %></li>
  <li>Description: <%= @product.description %></li>
</ul>

<p>Categories: 
  <% @product.categories.each do |category| %>
  <%= link_to category.name, category_path(category) %>
  <% end %>
</p>

