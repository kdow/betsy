<h2><%= (@seller.username).capitalize %></h2>
<section class="cards">
  <% if @seller.products.count == 0 %>
    <p>Sorry. This seller has no items available at the moment.</p>
  <% else %>
    <% @seller.products.each do |product| %>
      <article>
        <div class="card">
          <%= image_tag(product.photo_url, class: "card-img-top", :alt => "Photo of ""#{product.name}") %>
          <div class="card-body">
            <h4 class="card_title">
              <%= link_to product.name, product_path(product) %>
            </h4>
            <div class="card_body">
              <%= "$""#{'%.2f' % (product.price / 100.00)}" %>
            </div>
            <div class="card_body">
              <%= form_for OrderProduct.new do |f| %>
                <% if product.quantity.nil? || product.quantity < 1 %>
                  <% "Sorry, this item is out of stock." %>
                <% else %>
                  <p class="card_link">
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 0, min: 0, max: product.quantity, class: "form-control qty" %>
                  </p>
                  <p class="card_link">
                    <%= f.submit "Add to Cart", class: "btn btn-primary" %>
                  </p>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </article>
    <% end %>
  <% end %>
</section>