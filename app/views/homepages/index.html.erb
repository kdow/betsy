<%= image_tag("https://live.staticflickr.com/65535/33890483388_bbbc313b31_o.jpg", :alt => "Cats and mice jumping around books", class: "img-fluid") %>

<br class="top-buffer">

<% products = Product.active(@products).sample(6) %>

<section class="cards">
    <% products.each do |product| %>
      <article>
        <div class="card">
          <%= link_to(image_tag(product.photo_url, class: "card-img-top", :alt => "Photo of ""#{product.name}"), product_path(product)) %>
          <div class="card-body">
            <h5><%= product.name %></h5>
            <%= link_to "$""#{'%.2f' % (product.price / 100.00)}", product_path(product), class: "btn btn-primary" %>
          </div>
          <%= form_for OrderProduct.new do |f| %>
            <% if product.quantity.nil? || product.quantity < 1 %>
              <% "Sorry, this item is out of stock." %>
            <% else %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.number_field :quantity, value: 1, min: 1, max: product.quantity, class: "form-control qty" %>
              <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </article>
  <% end %>
</section>


