<%= image_tag("https://live.staticflickr.com/65535/33890483388_bbbc313b31_o.jpg", :alt => "Cats and mice jumping around books", class: "img-fluid") %>
<br class="top-buffer">
  <article class="browse-option">
    <section class="browse-products">
    <div class="banner"><h3>Shop Purrducts</h3></div>
    <% products = Product.active(@products).sample(3) %>
    <section class="cards">
      <% products.each do |product| %>
      <article>
        <div class="card">
          <%= link_to(image_tag(product.photo_url, class: "card-img-top", :alt => "Photo of ""#{product.name}"), product_path(product)) %>
          <div class="card-body">
            <h4 class="card_title">
              <%= link_to product.name, product_path(product) %>
            </h4>
            <div class="card_body">
              <%= "$""#{'%.2f' % (product.price / 100.00)}" %>
            </div>
            <div class="card_body">
              <%= form_for OrderProduct.new do |f| %>
                <% if product.quantity.nil? || product.quantity < 1 %>
                  <% "Sorry, this item is out of stock." %>
                <% else %>
                  <p class="card_link">
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 1, min: 1, min: 0, max: product.quantity, class: "form-control qty" %>
                  </p>
                  <p class="card_link">
                    <%= f.submit "Add to Cart", class: "btn btn-primary" %>
                  </p>
                <% end %>
              <% end %>
          </div>
        </div>
      </article>
    <% end %>
    </section>
</section>

